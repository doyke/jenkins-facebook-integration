{% extends 'layout.html.twig' %}
{% set active = 'projects' %}

{% block title %}Projects{% endblock %}

{% block content %}

    <h1>{% block projectsTitle %}Your projects{% endblock %}</h1>
    
    {% block createButton %}{% endblock %}
    
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Name / Description</th>
                <th>Enabled</th>
                {% block projectTableHead %}{% endblock %}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% if projects %}
            {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>
                    <strong>{{ project.title|escape }}</strong><br />
                    <small class="muted">{{ project.description|escape }}</small>
                </td>
                <td><i class="{% if project.enabled %}icon-ok{% else %}icon-remove{% endif %}"></i></td>
                {% block projectTableRow %}{% endblock %}
                <td>
                    <a class="btn btn-mini btn-primary" href="{{ path('projectEdit', {project: project.id}) }}"><i class="icon-pencil"></i> Edit</a>
                    <a class="btn btn-mini btn-danger" href="{{ path('projectDelete', {project: project.id}) }}"><i class="icon-trash"></i> Delete</a>
                </td>
            </tr>
            {% endfor %}
            {% else %}
                {% block projectTableEmptyRow %}
                <td colspan="4">You dont't own any projects. Maybe create a new one?</td>
                {% endblock %}
            {% endif %}
        </tbody>
    </table>

    <form action="{{ path('login_check') }}" method="post" novalidate {{ form_enctype(form) }} class="form-vertical">
        {{ form_widget(form) }}
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Send</button>
        </div>
    </form>

{% endblock %}
